{
  "name": "@boardava/glue",
  "scripts": {
    "clear": "rm -rf ./build ./tsconfig.tsbuildinfo",
    "types:check": "tsc --noEmit",
    "build": "tsc -b",
    "dev": "pnpm run clear && FILE=./index.ts pnpm run dev:ts-node",
    "dev:ts-node": "ts-node-dev --respawn --transpile-only --exit-child --quiet --no-deprecation ${TS_NODE_OPTIONS:-} ${FILE}",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "@boardava/domain": "workspace:*"
  },
  "devDependencies": {
    "@boardava/eslint-config": "workspace:*",
    "@types/node": "^22.8.6",
    "typescript": "^5.6.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
