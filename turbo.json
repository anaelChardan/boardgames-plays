{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI", "NODE_ENV"],
  "globalDependencies": ["**/.env*"],
  "tasks": {
    "build": {
      "cache": false
    },
    "lint:check": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "cache": false
    },
    "test:functionnal": {
      "dependsOn": [],
      "cache": false
    },
    "types:check": {
      "cache": false
    }
  }
}
